<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="19dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/faint">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:textAlignment="center"
                android:text="Time for NEXT CYLE !!!"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nn"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:background="@color/blue"
                android:paddingLeft="20dp"
                android:text="N!!"
                android:textColor="@color/viewBg"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/pp"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/nn"
                android:background="@color/red"
                android:paddingLeft="20dp"
                android:text="P!"
                android:textColor="@color/viewBg"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/kk"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/pp"
                android:alpha="1"
                android:background="@color/yellow"
                android:paddingLeft="20dp"
                android:text="K!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50dp" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/title"
                android:layout_marginBottom="20dp"
                android:alpha="0.6"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/crop1" />



            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="325dp"
                android:background="@color/green"
                android:layout_below="@id/thumbnail"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="240dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>